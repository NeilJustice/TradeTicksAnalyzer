{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Build Debug",
         "type": "shell",
         "command": "ninja",
         "args": [
            "-v"
         ],
         "options": {
            "cwd": "${workspaceRoot}/Debug"
         },
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "problemMatcher": {
            "base": "$gcc",
            "fileLocation": [
               "relative",
               "/code/TradeTicksAnalyzer/Debug"
            ]
         }
      },
      {
         "label": "Build RelWithDebInfo",
         "type": "shell",
         "command": "ninja",
         "args": [
            "-v"
         ],
         "options": {
            "cwd": "${workspaceRoot}/RelWithDebInfo"
         },
         "problemMatcher": {
            "base": "$gcc",
            "fileLocation": [
               "relative",
               "/code/TradeTicksAnalyzer/RelWithDebInfo"
            ]
         }
      },
      {
         "label": "Run Debug libTradeTicksAnalyzerTests",
         "type": "shell",
         "command": "./Debug/libTradeTicksAnalyzerTests/libTradeTicksAnalyzerTests",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "group": {
            "kind": "test",
            "isDefault": true
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         }
      },
      {
         "label": "Run RelWithDebInfo libTradeTicksAnalyzerTests",
         "type": "shell",
         "command": "./RelWithDebInfo/libTradeTicksAnalyzerTests/libTradeTicksAnalyzerTests",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         }
      }
   ]
}